{
  "name": "setup-metanorma",
  "version": "1.0.0",
  "private": true,
  "description": "setup metanorma action",
  "main": "lib/setup-metanorma.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions-mn/setup.git"
  },
  "keywords": [
    "actions",
    "metanorma",
    "setup"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/tool-cache": "^1.0.0",
    "@types/node-fetch": "^2.5.7",
    "node-fetch": "^2.6.0",
    "semver": "^6.1.1",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "@actions/io": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "@types/semver": "^6.0.0",
    "@vercel/ncc": "^0.32.0",
    "husky": "^8.0.1",
    "jest": "^24.8.0",
    "jest-circus": "^24.7.1",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format",
      "post-commit": "npm prune --production && git add node_modules/* && git commit -m \"Husky commit correct node modules\""
    }
  }
}
